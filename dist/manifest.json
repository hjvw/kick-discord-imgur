{
  "manifest_version": 3,
  "name": "TS Request Interceptor",
  "version": "1.0.0",
  "description": "Chrome extension in TypeScript",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
